                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30dp"
                android:text="2℃~7℃"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30dp"
                android:text="多云转晴"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/wind2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30dp"
                android:text="微风"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/day3"
            android:layout_width="0dp"
